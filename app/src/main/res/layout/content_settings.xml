<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.accelerator.metro.ui.activity.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <RelativeLayout
        android:id="@+id/settings_modify_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/settings_modify_login_pwd"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_blue_500_18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/settings_modify_login_pwd"
        android:layout_marginEnd="@dimen/activity_vertical_mini_margin"
        android:layout_marginLeft="@dimen/activity_vertical_mini_margin"
        android:layout_marginRight="@dimen/activity_vertical_mini_margin"
        android:layout_marginStart="@dimen/activity_vertical_mini_margin"
        android:background="@color/colorDividerText" />

    <RelativeLayout
        android:id="@+id/settings_modify_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/settings_modify_pay_pwd"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_blue_500_18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/settings_modify_pay_pwd"
        android:layout_marginEnd="@dimen/activity_vertical_mini_margin"
        android:layout_marginLeft="@dimen/activity_vertical_mini_margin"
        android:layout_marginRight="@dimen/activity_vertical_mini_margin"
        android:layout_marginStart="@dimen/activity_vertical_mini_margin"
        android:background="@color/colorDividerText" />

    <RelativeLayout
        android:id="@+id/settings_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/settings_nfc"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_blue_500_18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/settings_nfc"
        android:layout_marginEnd="@dimen/activity_vertical_mini_margin"
        android:layout_marginLeft="@dimen/activity_vertical_mini_margin"
        android:layout_marginRight="@dimen/activity_vertical_mini_margin"
        android:layout_marginStart="@dimen/activity_vertical_mini_margin"
        android:background="@color/colorDividerText" />

    <Button
        android:id="@+id/settings_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_mini_margin"
        android:layout_marginLeft="@dimen/activity_vertical_mini_margin"
        android:layout_marginRight="@dimen/activity_vertical_mini_margin"
        android:layout_marginStart="@dimen/activity_vertical_mini_margin"
        android:background="@drawable/button_shape"
        android:text="@string/EXIT_LOGON" />

</RelativeLayout>
