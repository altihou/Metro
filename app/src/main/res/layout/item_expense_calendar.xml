<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_calendar_date"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/expense_calendar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:textColor="@color/googleColorBlue"
        android:textSize="@dimen/text_normal"
        tools:text="2016-8-4" />

    <TextView
        android:id="@+id/expense_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv1"
        android:textSize="@dimen/text_normal"
        tools:text="退票" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="@dimen/activity_vertical_mini_margin"
        android:layout_toLeftOf="@+id/expense_calendar_money"
        android:layout_toStartOf="@+id/expense_calendar_money"
        android:text="@string/expense_calendar_money"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/expense_calendar_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="@dimen/activity_vertical_mini_margin"
        android:textColor="@color/googleColorGreen"
        android:textSize="@dimen/text_normal"
        tools:text="+100元" />


</RelativeLayout>